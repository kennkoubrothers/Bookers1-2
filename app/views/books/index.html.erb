<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @book, local: true do |f| %>
  <div>
    <%= f.label :title %> </br>
    <%= f.text_field :title%> 
  </div>

  <div>
    <%= f.label :body %> </br>
    <%= f.text_area :body %>
  </div>

  <%= f.submit "Create Book" %>
<% end %>
